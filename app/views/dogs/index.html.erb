<%= @dogs.last.name %>
<div class="hero-banner">
  <div class="container">
    <h1 class='text-white'>Find cute dogs in your area</h1>
    <% if user_signed_in? %>
    <% else %>
      <a class="yellow-pill-btn" href="/users/sign_up">Register</a>
      <a class="yellow-pill-btn" href="/users/sign_in">Login</a>
    <% end %>
  </div>
  </div>

<div class="container">
  <div class="cards">
  <% @dogs.each do |dog| %>
    <div class='card-component'>
      <%= link_to dog_path(dog) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= dog.photo_url %>)"></div>
      <% end %>
      <div class='card-product-infos'>
        <div class="card-dog-heading">
          <h2><%= dog.name %></h2>
          <p><%= dog.rate %> treats</p>
        </div>
        <p><%= dog.location %>
        <i class="fa-solid fa-paw"></i>
        <%= link_to "View details", dog_path(dog)  %>
      </div>
    </div>
  <% end %>
  </div>
</div>
